@{
    Layout = "~/Shared/_Layout.cshtml";
    Page.Title = "PokerNight ~ Live Event ~";

    string EventNaam = "test";
    int smallBlind = 1;
    int bigBlind = 2;


}
<div class="container-fluid">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-lg-10">
            <div class="accordion" id="accordionExample">
                <div class="card border-dark">
                    <!-- HEADER VAN DE EERSTE CARD-->
                    <div class="card-header bg-dark" id="headingOne">
                        <h5>
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#WaardeFiches" aria-expanded="true" aria-controls="WaardeFiches">
                                Fiches & Blinds
                            </button>
                        </h5>
                    </div>
                    <!-- BODY VAN DE EERSTE CARD-->
                    <div id="WaardeFiches" class="collapse show" aria-labelledby="headingOne">
                        <div class="card-body">
                            <div>
                                @foreach (var row in Functie.Fiches("test"))
                                {
                                    <img height="140" width="140" src="~/Images/fiches/@(row.Kleur)/@(row.Waarde).png" alt="Alternate Text" />
                                }
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <p id="demo"></p>
                                </div>
                                <div class="col-md-4">

                                </div>
                                <div class="col-md-4">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card border-dark">
                    <!--HEADER VAN DE TWEEDE CARD-->
                    <div class="card-header bg-dark" id="headingTwo">
                        <h2 class="mb-0">
                            <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#TafelIndeling" aria-expanded="false" aria-controls="TafelIndeling">
                                Tafel indeling
                            </button>
                        </h2>
                    </div>
                    <!-- BODY VAN DE TWEEDE CARD-->
                    <div id="TafelIndeling" class="collapse show" aria-labelledby="headingTwo">
                        <div class="card-body">
                            <div class="row">
                                @for (int x = 1; Functie.HoeveelheidTafels(EventNaam) >= x; x++)
                                {

                                    <div class="col-md-4">
                                        <table class="table table-light table-bordered">
                                            <thead class="thead-dark">
                                                <tr>
                                                    <th>Tafel @x</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var row in Functie.Spelers(EventNaam, x))
                                                {
                                                    <tr>
                                                        <td>@row.Voornaam @row.Achternaam </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card border-dark">
                    <!--HEADER VAN DE DERDE CARD-->
                    <div class="card-header bg-dark" id="headingThree">
                        <h2 class="mb-0">
                            <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#Pauzes" aria-expanded="false aria-controls="Pauzes">
                                Pauzes
                            </button>
                        </h2>
                    </div>
                    <!-- BODY VAN DE DERDE CARD-->
                    <div id="Pauzes" class="collapse show" aria-labelledby="headingThree">
                        <div class="card-body">
                            Volgende pauze begint over 10 minuten
                        </div>
                    </div>
                </div>
                <div class="card border-dark">
                    <!--HEADER VAN DE VIERDE CARD-->
                    <div class="card-header bg-dark" id="headingFour">
                        <h2 class="mb-0">
                            <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#CheatCheet" aria-expanded="false" aria-controls="CheatCheet">
                                CheatCheet
                            </button>
                        </h2>
                    </div>
                    <!-- BODY VAN DE VIERDE CARD-->
                    <div id="CheatCheet" class="collapse" aria-labelledby="headingFour">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm">
                                   <h2>Royal Flush</h2>
                                   <h5>649.739:1</h5>
                                   <p>Aas, koning, koningin, boer en 10 van dezelfde kleur. </p>
                                </div>
                                <div class="col-sm">
                                   <img src="~/Images/Cheatsheet/Combies/Royal Flush.jpg" width="500" height="250" class="img-fluid" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm">
                                    <h2>Straight Flush</h2>
                                    <h5>72.192:1</h5>
                                    <p>Vijf achtereenvolgende kaarten van dezelfde kleur.</p>
                                    
                                </div>
                                <div class="col-sm">
                                    <img src="~/Images/Cheatsheet/Combies/Straight Flush.jpg" width="500" height="250" class="img-fluid" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm">
                                    <h2>Four of a Kind</h2>
                                    <h5>4.164:1</h5>
                                    <p>Vier kaarten met dezelfde waarde.</p>
                                </div>
                                <div class="col-sm">
                                    <img src="~/Images/Cheatsheet/Combies/4 of a Kind.jpg" width="500" height="250" class="img-fluid" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm">
                                    <h2>Full House</h2>
                                    <h5>693:1</h5>
                                    <p>Drie kaarten met dezelfde waarde plus twee kaarten met dezelfde waarde.</p>
                                </div>
                                <div class="col-sm">
                                    <img src="~/Images/Cheatsheet/Combies/Full House.jpg" width="500" height="250" class="img-fluid" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm">
                                    <h2>Flush</h2>
                                    <h5>508:1</h5>
                                    <p>Vijf kaarten van dezelfde kleur.</p>
                                </div>
                                <div class="col-sm">
                                    <img src="~/Images/Cheatsheet/Combies/Flush.jpg" width="500" height="250" class="img-fluid" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm">
                                    <h2>Straight</h2>
                                    <h5>254:1</h5>
                                    <p>Vijf opeenvolgende kaarten, los van de kleur.</p>
                                </div>
                                <div class="col-sm">
                                    <img src="~/Images/Cheatsheet/Combies/Straight.jpg" width="500" height="250" class="img-fluid" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm">
                                    <h2>Three of a Kind</h2>
                                    <h5>46:1</h5>
                                    <p>Drie kaarten met dezelfde waarde.</p>
                                </div>
                                <div class="col-sm">
                                    <img src="~/Images/Cheatsheet/Combies/3 of a Kind.jpg" width="500" height="250" class="img-fluid" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm">
                                    <h2>Two pair</h2>
                                    <h5>20:1</h5>
                                    <p>Twee sets van twee kaarten met dezelfde waarde.</p>
                                </div>
                                <div class="col-sm">
                                    <img src="~/Images/Cheatsheet/Combies/2 Pairs.jpg" width="500" height="250" class="img-fluid" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm">
                                    <h2>One Pair</h2>
                                    <h5>1,37</h5>
                                    <p>Twee kaarten met dezelfde waarde.</p>
                                </div>
                                <div class="col-sm">
                                    <img src="~/Images/Cheatsheet/Combies/1 Pair.jpg" width="500" height="250" class="img-fluid" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm">
                                    <h2>High card</h2>
                                    <p>De hoogste kaart (ofwel geen van bovenstaande combinaties).</p>
                                </div>
                                <div class="col-sm">
                                    <img src="~/Images/Cheatsheet/Combies/High Card.jpg" width="500" height="250" class="img-fluid" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>