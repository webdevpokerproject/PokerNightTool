@{
    Layout = "~/Shared/_Layout.cshtml";
    Page.Title = "PokerNight ~ Live Event ~";

    string EventNaam = "test";
    int smallBlind = 1;
    int bigBlind = 2;

}
<!--Card boven de fiches-->
<div class="container-fluid">
    <div class="row no-gutters">
        <div class="col-1"> </div>
        <div class="col-10">
            <div class="card bg-dark">
                <div class="card-title" data-toggle="collapse" data-target="#WaardeFiches">
                    <h5 class="font-weight-bold">De huidige fiches: </h5>
                </div>
            </div>

        </div>
        <div class="col-1"> </div>
    </div>
</div>

<!-- Hier worden de fiches weergeven + de blinds-->
<div id="WaardeFiches" class="collapse.show">
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-1"> </div>
            <div class="col-auto">
                <div>
                    @foreach (var row in Functie.Fiches("test"))
                    {
                        <img height="160" width="160" src="~/Images/fiches/@(row.Kleur)/@(row.Waarde).png" alt="Alternate Text" />
                    }
                </div>
                <div>
                    <!-- Blinds -->
                </div>

            </div>
        </div>
    </div>
</div>

<!--Card boven de tabel-->
<div class="container-fluid">
    <div class="row no-gutters">
        <div class="col-1"> </div>
        <div class="col-10">
            <div class="card bg-dark">
                <div class="card-title" data-toggle="collapse" data-target="#TafelIndeling">
                    <h5 class="font-weight-bold">De huidige tafelindeling</h5>
                </div>
            </div>

        </div>
        <div class="col-1"> </div>
    </div>
</div>

<!--Tabellen-->
<div id="TafelIndeling" class="collapse.show">
    <div class="container">
        <div class="row ">
            <br />
            @for (int x = 1; Functie.HoeveelheidTafels(EventNaam) >= x; x++)
            {
                <div class="col-4">
                    <table class="table table-light table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Tafel @x</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in Functie.Spelers(EventNaam, x))
                            {
                                <tr>
                                    <td>@row.Voornaam @row.Achternaam </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!--Card boven de cheatsheet-->
<div class="container-fluid">
    <div class="row no-gutters">
        <div class="col-1"> </div>
        <div class="col-10">
            <div class="card bg-dark">
                <div class="card-title" data-toggle="collapse" data-target="#Cheatsheet">
                    <h5 class="font-weight-bold">Kijk hier om te spieken</h5>
                </div>
            </div>
        </div>
        <div class="col-1"> </div>
    </div>
</div>

<!--Cheatcheet content-->
<div id="Cheatsheet" class="collapse">
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-1"> </div>
            <div class="col-auto">
                <img src="~/Images/Cheatsheet/Handranking-1.jpg" alt="Cheat sheet" />
            </div>
            <div class="col-1"> </div>
        </div>
    </div>
</div>
@RenderPage("SubSections/PokerRules.cshtml")
